<%- include partials/header.ejs%>


        <div class="container firstDiv">
            <div class="card mb-3" style="max-width: 800px; margin: 0 auto">
                <div class="row no-gutters">
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Employer: <%=company.company%></h5>
                            <a class='card-text' href=<%=company.website%>>Company Website</a>
                            <p class="card-text">
                                Size: <%=company.size%>
                            </p>
                            <p class="card-text"></p>
                                Type of Organization: <%=company.type%>
                            </p>
                            <p class="card-text"></p>
                                Founded: <%=company.found%>
                            </p>
                            <p class="card-text">
                                Geographic Reach: <%=company.geographicReach%>
                            </p>
    
                            <p class="card-text">
                                <small class="text-muted">
                                    This information will be automatically populated for each role 
                                </small>
                            </p>
                            <a class="btn btn-primary btn-sm" href=<%="/company/employer/"+company._id%> role="button">
                                View/Edit Employer Information
                            </a>
    
                        </div>
                    </div>
                </div>
            </div>
        </div>

    

        <div class="container">
            <h1>My Roles</h1>

            <div class="row">
                <%company.roles.forEach((role) => {%>

                <div class="col-md-3">
                    <div class="card border-primary">
                        <div class="card-header">
                            <%=role.roleTitle%>
                        </div>
                        <div class="card-body text-primary">
                            <h5 class="card-title"><%=role.company.company%></h5>
                            <p class="card-text">
                                Trade Category: <%=role.majorTradeArea%>
                            </p>
                            <p class="card-text">
                                Trade: <%=role.tradeName%> 
                            </p>
                        </div>
                        <a class="btn btn-primary btn-sm" role='button' href=<%="/company/roles/"+role._id%>>View Role</a>
                    </div>
                </div>
                <%})%>
                    
            </div>
        </div>

        <div class="container" id="introJumbotron" style="text-align: center">
            <a class="btn btn-primary btn-lg" role='button' href="/company/roles/new">Create New Role</a>
        </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>