<%- include partials/header.ejs%>


    <div class="container firstDiv">

    
        <div class="card">
            <div class="card-header">
                <%=employer.company%>
            </div>
            <div class="card-body">
                <!-- <h5 class="card-title">Special title treatment</h5> -->
                <a href=<%=employer.website%>>Company Website</a>
                <p class="card-text">
                    <span class="cardTextTitle">About <%=employer.company%>:</span>
                </p>
